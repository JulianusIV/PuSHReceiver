@using Models;
@{
    ViewData["Title"] = "Subscription Details";
}
@model Lease

<div class="w-75">
    <h2>@ViewData["Title"]</h2>
    <br />
    <div class="row mb-2">
        <label class="col-2">Id: </label>
        <p class="col">@Model.Id</p>
    </div>
    <div class="row mb-2">
        <label class="col-2">Name: </label>
        <p class="col">@Model.DisplayName</p>
    </div>
    <div class="row mb-2">
        <label class="col-2">TopicUrl: </label>
        <p class="col">@Model.TopicUrl</p>
    </div>
    <div class="row mb-2">
        <label class="col-2">HubUrl: </label>
        <p class="col">@Model.HubUrl</p>
    </div>
    <div class="row mb-2">
        <label class="col-2">Active: </label>
        <p class="col">@Model.Active</p>
    </div>
    <div class="row mb-2">
        <label class="col-2">Publisher: </label>
        <p class="col">@Model.Publisher</p>
    </div>
    <div class="row mb-2">
        <label class="col-2">Consumer: </label>
        <p class="col">@Model.Consumer</p>
    </div>
    <div>
        <br />
        <h2>Subscription Status</h2>
        <br />
    </div>
    <div class="row mb-2">
        <label class="col-2">Subscribed: </label>
        <p class="col">@Model.Subscribed</p>
    </div>
    @if (Model.Subscribed)
    {
        <div class="row mb-2">
            <label class="col-2">Lease duration: </label>
            <p class="col">@Model.LeaseTime</p>
        </div>
        <div class="row mb-2">
            <label class="col-2">Subscribed: </label>
            <p class="col">@Model.Subscribed</p>
        </div>
    }
    <div>
        <br />
        <h2>Plugins</h2>
        <br />
    </div>
    <div class="row mb-2">
        <label class="col-2">Publisher: </label>
        <p class="col">@Model.Publisher</p>
    </div>
    <div class="row mb-2">
        <label class="col-2">Consumer: </label>
        <p class="col">@Model.Consumer</p>
    </div>
    <div class="row mb-2">
        <label class="col-2">Publisher Data: </label>
        <p class="col">@Model.PublisherData</p>
    </div>
    <div class="row mb-2">
        <label class="col-2">Consumer Data: </label>
        <p class="col">@Model.ConsumerData</p>
    </div>
    <div>
        <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Dashboard", "Subscriptions")'">Back</button>
        <button type="button" class="btn btn-outline-danger" onclick="location.href='@Url.Action("Delete", "Subscriptions", new { @id = Model.Id })'">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi mb-1 me-1 bi-trash3-fill" viewBox="0 0 16 16">
                <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5Zm-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5ZM4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5Z" />
            </svg>
            Delete
        </button>
    </div>
</div>
